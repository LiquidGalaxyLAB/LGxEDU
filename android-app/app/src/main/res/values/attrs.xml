<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SpringIndicator">

        <!--tab text color -->
        <attr name="siTextColor" format="reference"/>

        <!--tab text color which is selected-->
        <attr name="siSelectedTextColor" format="reference"/>

        <!--tab item bg -->
        <attr name="siTextBg" format="reference"/>

        <!--tab text size-->
        <attr name="siTextSize" format="dimension"/>

        <!--indicator bg color-->
        <attr name="siIndicatorColor" format="reference"/>

        <!--indicator bg colors. should equals your titles count-->
        <attr name="siIndicatorColors" format="reference"/>

        <!--max indicator radius-->
        <attr name="siRadiusMax" format="dimension"/>

        <!--min indicator radius when moving-->
        <attr name="siRadiusMin" format="dimension"/>

    </declare-styleable>

<declare-styleable name="ChartProgressBar">
		<attr name="hdMaxValue" format="float"/>
		<attr name="hdBarWidth" format="dimension"/>
		<attr name="hdBarHeight" format="dimension"/>
		<attr name="hdEmptyColor" format="color"/>
		<attr name="hdProgressColor" format="color"/>
		<attr name="hdProgressDisableColor" format="color"/>
		<attr name="hdProgressClickColor" format="color"/>
		<attr name="hdBarRadius" format="dimension"/>
		<attr name="hdPinTextColor" format="color"/>
		<attr name="hdPinBackgroundColor" format="color"/>
		<attr name="hdPinPaddingTop" format="dimension"/>
		<attr name="hdPinPaddingBottom" format="dimension"/>
		<attr name="hdPinPaddingEnd" format="dimension"/>
		<attr name="hdPinPaddingStart" format="dimension"/>
		<attr name="hdBarCanBeClick" format="boolean"/>
		<attr name="hdBarTitleColor" format="color"/>
		<attr name="hdBarTitleMarginTop" format="dimension"/>
		<attr name="hdBarTitleTxtSize" format="dimension"/>
		<attr name="hdPinTxtSize" format="dimension"/>
		<attr name="hdPinMarginTop" format="dimension"/>
		<attr name="hdPinMarginBottom" format="dimension"/>
		<attr name="hdPinMarginEnd" format="dimension"/>
		<attr name="hdPinMarginStart" format="dimension"/>
		<attr name="hdPinDrawable" format="integer"/>
		<attr name="hdBarTitleSelectedColor" format="color"/>
		<attr name="hdBarCanBeToggle" format="boolean"/>
	</declare-styleable>

    <declare-styleable name="BoxedVertical">
        <attr name="points" format="integer" />
        <attr name="max" format="integer" />
        <attr name="min" format="integer"/>
        <attr name="defaultValue" format="integer" />
        <attr name="textBottomPadding" format="dimension" />
        <attr name="libCornerRadius" format="dimension" />
        <attr name="step" format="integer"/>

        <attr name="defaultImage" format="reference"/>
        <attr name="minImage" format="reference"/>
        <attr name="maxImage" format="reference"/>

        <attr name="progressColor" format="color" />
        <attr name="backgroundColor" format="color" />

        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="textStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <attr name="clockwise" format="boolean" />
        <attr name="enabled" format="boolean" />
        <attr name="touchDisabled" format="boolean" />
        <attr name="textEnabled" format="boolean" />
        <attr name="imageEnabled" format="boolean" />

    </declare-styleable>
</resources>
