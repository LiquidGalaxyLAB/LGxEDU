<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="12">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/fragment_question_layout"
        android:layout_height="0dp"
        android:layout_weight="1.5">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/question_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="HEY"
            android:textSize="@dimen/_17ssp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/_4sdp"
            android:id="@+id/flag_image"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:padding="1dp"
            android:layout_toEndOf="@+id/question_title"
            android:background="@drawable/black_border"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/drag_drop_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:layout_toEndOf="@+id/question_title"
            android:layout_margin="@dimen/_2sdp"
            android:text="Drag and drop your name to the correct answer"
            android:textSize="@dimen/_7ssp"
            android:visibility="gone"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/question_0_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_4sdp"
            android:orientation="horizontal" />

    </RelativeLayout>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>-->


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/mainGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="8"
        app:columnCount="2"
        app:rowCount="2">
        <!--android:layout_marginBottom="72dp"-->
        <!-- ROW 1  -->
        <!-- COLUMN 1  -->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/question_name_1"
            android:gravity="center"
            android:textSize="@dimen/_11ssp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:text="Bottom RecyclerView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/question_1_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/question_name_1"
            android:orientation="horizontal"/>
        </RelativeLayout>

        <!-- COLUMN 2  -->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/question_name_2"
                android:gravity="center"
                android:textSize="@dimen/_11ssp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:text="Bottom RecyclerView" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/question_2_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/question_name_2"
                android:orientation="horizontal"/>
        </RelativeLayout>


        <!-- ROW 2  -->
        <!-- COLUMN 1  -->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/question_name_3"
                android:gravity="center"
                android:textSize="@dimen/_11ssp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:text="Bottom RecyclerView" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/question_3_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/question_name_3"
                android:orientation="horizontal"/>
        </RelativeLayout>

        <!-- COLUMN 2  -->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/question_name_4"
                android:gravity="center"
                android:textSize="@dimen/_11ssp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:text="Bottom RecyclerView" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/question_4_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/question_name_4"
                android:orientation="horizontal"/>
        </RelativeLayout>

    </androidx.gridlayout.widget.GridLayout>


</LinearLayout>