<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/quiz_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:text="Quiz Category"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/play_rv_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quiz_category"
        android:layout_marginStart="@dimen/_7sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="horizontal" />

    <View
        android:id="@+id/play_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/play_rv_horizontal"
        android:layout_marginBottom="@dimen/_3sdp"
        android:background="#31C7C7CC" />


</RelativeLayout>