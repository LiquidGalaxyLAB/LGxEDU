<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/title_choose_players"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Players"
            android:textColor="@color/grey_700"
            android:textSize="@dimen/_24ssp" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/assistant_button"
            android:layout_margin="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:backgroundTint="@color/primary"
            app:srcCompat="@drawable/ic_mic_black_24dp"
            app:tint="@color/whiteGrey"
            >

        </com.google.android.material.floatingactionbutton.FloatingActionButton>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:orientation="horizontal">

                <com.lglab.ivan.lgxeducontroller.games.trivia.adapters.DynamicSquareLayout
                    android:id="@+id/player1_circle"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:background="@drawable/circle"
                        android:gravity="center_vertical"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/indicator_1" />
                </com.lglab.ivan.lgxeducontroller.games.trivia.adapters.DynamicSquareLayout>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/remove_player_1"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_remove_circle_black_24dp"
                    app:tint="@color/red" />

                <EditText
                    android:id="@+id/player1_editname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:hint="Player1 Name"
                    android:inputType="text"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:orientation="horizontal">

                <com.lglab.ivan.lgxeducontroller.games.trivia.adapters.DynamicSquareLayout
                    android:id="@+id/player2_circle"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="0dp"
                        android:background="@drawable/circle"
                        android:gravity="center_vertical"
                        android:text="2"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/indicator_2" />
                </com.lglab.ivan.lgxeducontroller.games.trivia.adapters.DynamicSquareLayout>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/remove_player_2"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_remove_circle_black_24dp"
                    app:tint="@color/red" />

                <EditText
                    android:id="@+id/player2_editname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:hint="Player2 Name"
                    android:inputType="text"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:orientation="horizontal">

                <com.lglab.ivan.lgxeducontroller.games.trivia.adapters.DynamicSquareLayout
                    android:id="@+id/player3_circle"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="0dp"
                        android:background="@drawable/circle"
                        android:gravity="center_vertical"
                        android:text="3"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/indicator_3" />
                </com.lglab.ivan.lgxeducontroller.games.trivia.adapters.DynamicSquareLayout>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/remove_player_3"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_remove_circle_black_24dp"
                    app:tint="@color/red" />

                <EditText
                    android:id="@+id/player3_editname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:hint="Player3 Name"
                    android:inputType="text"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:orientation="horizontal">

                <com.lglab.ivan.lgxeducontroller.games.trivia.adapters.DynamicSquareLayout
                    android:id="@+id/player4_circle"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:background="@drawable/circle"
                        android:gravity="center_vertical"
                        android:text="4"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/indicator_4" />
                </com.lglab.ivan.lgxeducontroller.games.trivia.adapters.DynamicSquareLayout>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/remove_player_4"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_remove_circle_black_24dp"
                    app:tint="@color/red" />

                <EditText
                    android:id="@+id/player4_editname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:hint="Player4 Name"
                    android:inputType="text"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/play_button_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="PlAY"
            android:textSize="@dimen/_24ssp" />

    </RelativeLayout>
</LinearLayout>